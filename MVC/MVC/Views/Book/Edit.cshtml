@using MVC.Models
@model Book

@{
    ViewData["title"] = "Edit " + Model.Name;
}

<h1>@ViewData["title"]</h1>

@using(Html.BeginForm("Update", "Book", Model))
{
    <div class="form-gruop">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new {@class = "form-control"})
        @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Author)
        @Html.DropDownListFor(model => model.Author, (IEnumerable<SelectListItem>) ViewData["Authors"], null, new {@class = "form-control"})
        @Html.ValidationMessageFor(model => model.Author, "", new {@class = "text-danger"})
    </div>
    <div class="form-gruop">
        @Html.LabelFor(model => model.Price)
        @Html.TextBoxFor(model => model.Price, null, new {@class = "form-control", @type = "number", @step = "any"})
        @Html.ValidationMessageFor(model => model.Price, "", new {@class = "text-danger"})
    </div>
    <hr>
    <input type="submit" name="Save" class="btn btn-success" value="Save"/>
}